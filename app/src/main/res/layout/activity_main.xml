<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Nombre:"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtNombre"
        tools:layout_editor_absoluteY="247dp" />

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="226dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Apellido paterno"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtApellidoPaterno"
        tools:layout_editor_absoluteY="325dp" />

    <EditText
        android:id="@+id/edtApellidoPaterno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="153dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:text="Apellido Materno"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtApellidoMaterno"
        tools:layout_editor_absoluteY="415dp" />

    <EditText
        android:id="@+id/edtApellidoMaterno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="303dp"
        tools:layout_editor_absoluteY="394dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Fecha de nacimiento"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtFecha"
        tools:layout_editor_absoluteY="494dp" />

    <EditText
        android:id="@+id/edtFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="486dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Homonimia"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtAleatorio"
        tools:layout_editor_absoluteY="572dp" />

    <EditText
        android:id="@+id/edtAleatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="310dp"
        tools:layout_editor_absoluteY="563dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="108dp"
        android:text="RFC"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/edtRFC"
        tools:layout_editor_absoluteY="658dp" />

    <EditText
        android:id="@+id/edtRFC"
        android:layout_width="172dp"
        android:layout_height="47dp"
        android:editable="false"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="327dp"
        tools:layout_editor_absoluteY="648dp" />

    <Button
        android:id="@+id/btnGenerar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="GenerarRFC"
        android:text="Generar"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="777dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        android:textAllCaps="false"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="542dp"
        tools:layout_editor_absoluteY="777dp" />

</android.support.constraint.ConstraintLayout>